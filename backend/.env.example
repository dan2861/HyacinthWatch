# Django Configuration
# Generate a new secret key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Debug Mode (defaults to False for security - set to True only for development)
# WARNING: Never set DEBUG=True in production!
DEBUG=True

# Allowed Hosts (comma-separated list of host/domain names)
# Required when DEBUG=False. Example: ALLOWED_HOSTS=example.com,www.example.com
# For development with DEBUG=True, defaults to localhost
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for production)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Option 2: Use individual database settings
# DB_NAME=postgres
# DB_USER=postgres
# DB_PASSWORD=your-password
# DB_HOST=localhost
# DB_PORT=6543
# PGSSLMODE=require
# DB_CONNECT_TIMEOUT=5

# CORS Configuration
# CORS_ALLOW_ALL=0

# Docker Configuration
# DJANGO_IN_DOCKER=0

# File Storage Configuration
# DEFAULT_FILE_STORAGE=django.core.files.storage.FileSystemStorage
# USE_S3=0

# AWS S3 Configuration (if USE_S3=1)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_ENDPOINT_URL=https://your-endpoint-url
# AWS_S3_ADDRESSING_STYLE=path
# AWS_DEFAULT_ACL=private
# SUPABASE_URL=https://your-supabase-url

# Celery Configuration
# CELERY_VISIBILITY_TIMEOUT=3600

# Orphan Monitoring Configuration
# ORPHAN_PRESENCE_DELAY_MINUTES=10
# ORPHAN_PRESENCE_MAX_RETRIES=3
# ORPHAN_MONITOR_SCHEDULE_MINUTES=5
